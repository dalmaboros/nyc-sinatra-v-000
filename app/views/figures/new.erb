<h1>Create a New Figure</h1>

<form method="post" action="/figures">
  Name: <input type="text" name="figure[name]" id="figure_name"><br>

  Titles (choose):
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>">
      <%= title.name %>
    </input>
  <% end %>
  <br>

  Title (create): <input type="text" name="title[name]" id="new_title"><br>

  Landmarks (choose):
  <% Landmark.all.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="landmark_<%= landmark.id %>">
      <%= landmark.name %>
    </input>
  <% end %>
  <br>

  Landmark (create): <input type="text" name="landmark[name]" id="new_landmark"><br>

  <input type="submit" value="Create New Figure">

</form>
